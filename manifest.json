{
  "name": "Basic Extension Learning",
  "version": "1.0",
  "description": "Testing Google Chrome Extension",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png",
    "1024": "icons/icon1024.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png",
      "512": "icons/icon512.png",
      "1024": "icons/icon1024.png"
    }
  },
  "options_page": "options.html"
}
